<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#FF0000</item>
    </style>

    <style name="MyBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">?superColor</item>
    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">

    </style>

    <style name="StartChipStyle" parent="MyChipStyle">
        <item name="shapeAppearanceOverlay">@style/StartChipShapeAppearanceSmallComponent</item>
    </style>

    <style name="StartChipShapeAppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="MiddleChipStyle" parent="MyChipStyle">
        <item name="shapeAppearanceOverlay">@style/MiddleChipShapeAppearanceSmallComponent</item>
    </style>

    <style name="MiddleChipShapeAppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="EndChipStyle" parent="MyChipStyle">
        <item name="shapeAppearanceOverlay">@style/EndChipShapeAppearanceSmallComponent</item>
    </style>

    <style name="EndChipShapeAppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/wildwood</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.0118571429</item>
    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>
</resources>